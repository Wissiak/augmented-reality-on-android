<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:layout_width="1dp"
        android:layout_height="1dp"
        opencv:show_fps="true"
        android:id="@+id/cameraView"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </ImageView>

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Size x"
        android:labelFor="@id/size_x"
        app:layout_constraintBottom_toTopOf="@id/size_x"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/size_x"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:valueFrom="60.0"
        android:valueTo="640.0"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Size y"
        android:labelFor="@id/size_y"
        app:layout_constraintBottom_toTopOf="@id/size_y"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/size_y"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:valueFrom="60.0"
        android:valueTo="1650.0"
        app:layout_constraintBottom_toTopOf="@id/size_x"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="Size z"
        android:labelFor="@id/size_z"
        app:layout_constraintBottom_toTopOf="@id/size_z"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/size_z"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:valueFrom="60.0"
        android:valueTo="300.0"
        app:layout_constraintBottom_toTopOf="@id/size_y"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>